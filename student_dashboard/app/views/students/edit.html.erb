<div class="errorarea">
    <% if flash[:errors] %>
        <div class="error">
            <% flash[:errors].each do |msg| %>
                <p><%= msg %></p>
            <% end %>
        </div>
    <% end %>	
</div>
<h1>Edit <%= "#{@student.first_name} #{@student.last_name}" %></h1>
<div class="formarea">
    <form action="/dojos/<%= @student.dojo_id %>/students/<%= @student.id %>" method="post">
        <input type="hidden" name="_method" value="patch">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <p>First Name: <input type="text" name=student[first_name] value="<%= @student.first_name %>"> </p>
        <p>Last Name: <input type="text" name="student[last_name]" value="<%= @student.last_name %>"> </p>
        <p>Email: <input type="text" name=student[email] value="<%= @student.email %>"> </p>
        <p><label>Dojo:</label>
		<select name="student[dojo_id]">
			<% @dojos.each do |dojo| %>
				<% if dojo.id == @student.dojo_id %>
					<option selected value="<%= dojo.id %>"><%= dojo.branch %></option>
				<% else %>
					<option value="<%= dojo.id %>"><%= dojo.branch %></option>
				<% end %>
			<% end %>	
		</select>
        </p>
        <input type="submit" name="Update" value="Update">	
    </form>
</div>
<p class="link"> <a href="/dojos">Home</a> | <a href="/dojos/<%= @student.dojo_id %>/students/<%= @student.id %>"><%= @student.first_name %></a> </p>