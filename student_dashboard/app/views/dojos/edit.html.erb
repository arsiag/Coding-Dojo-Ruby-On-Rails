<div class="errorarea">
    <% if flash[:errors] %>
        <div class="error">
            <% flash[:errors].each do |msg| %>
                <p><%= msg %></p>
            <% end %>
        </div>
    <% end %>	
</div>
<h1>Edit <%= @dojo.branch %></h1>
<div class="formarea">
    <form action="/dojos/<%= @dojo.id %>" method="post">
        <input type="hidden" name="_method" value="patch">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <p>Branch: <input type="text" name=dojo[branch] value="<%= @dojo.branch %>"> </p>
        <p>Street: <input type="text" name=dojo[street] value="<%= @dojo.street %>"> </p>
        <p>City: <input type="text" name=dojo[city] value="<%= @dojo.city %>"> </p>
        <p>State: <input type="text" name=dojo[state] value="<%= @dojo.state %>"> </p>
        <input type="submit" name="Update" value="Update">	
    </form>
</div>
<p class="link"> <a href="/dojos">Home</a> | <a href="/dojos/<%= @dojo.id %>">Show</a> </p>